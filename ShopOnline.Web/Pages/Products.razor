@page "/"
@inherits ProductsBase

@if (Products == null)
{
    <h3>Products are loading...</h3>
}
else
{
    <h3 class="mb-5">Products</h3>

    var productCount = Products.Count();

    @if (productCount > 0)
    {
        @foreach(var categoryItemsRow in GetGroupedProductsByCategory())
        {
            <h4>@GetCategoryName(categoryItemsRow)</h4>

            <div class="row mb-3">
                <DisplayProduct Products="@categoryItemsRow.Take(4)"></DisplayProduct>
            </div>
            <hr class="mb-3"/>
        }
    }
}
